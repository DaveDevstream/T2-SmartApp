<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/apt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="appoimtment" />

        <Button
            android:id="@+id/clin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="clinic date view" />

        <Button
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="user profile" />

        <Button
            android:id="@+id/clinics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="clinics" />

        <Button
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="postnatal" />

        <Button
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="calendar" />

        <Button
            android:id="@+id/userAntenatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text=" user antenatal" />

        <Button
            android:id="@+id/serviceOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="service options" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="login"
            android:textColor="#000000" />

        <Button
            android:id="@+id/editUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="edit service user" />

        <Button
            android:id="@+id/calendarAntenatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="calendar antenatal" />

        <Button
            android:id="@+id/appAntenatal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callActivity"
            android:padding="15dp"
            android:text="app antenatal" />

        
    </LinearLayout>

</ScrollView>