<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primary1" >

    <!-- Service options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_box_height"
        android:background="@color/primary3"
             android:padding="@dimen/padding_small" >

        <Button
            android:id="@+id/serviceBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="optionsClick"
             android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/button_back" 
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/service_header"
            android:textColor="@color/primary5"
            android:textSize="@dimen/font_size"
            android:layout_weight="1" />
        
        <Button
            android:id="@+id/serviceOverflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_action_overflow"
            android:gravity="end|center" />

    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    	<TextView 
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:text="@string/service_direction"
    	    android:textColor="@color/primary5"
    	    android:textSize="@dimen/font_size"
    	    android:gravity="center"
    	    android:padding="@dimen/padding_small"/>
        
        
    </LinearLayout>
    
    
    <!-- Select locations -->
    <!-- Domino (Dublin) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     	android:padding="@dimen/padding_small"
         >

        <Button
            android:id="@+id/dublin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dublin"
            android:onClick="optionsClick"
            android:textColor="@color/primary5"
            android:background="@drawable/button"
            android:textSize="@dimen/font_size"
            android:padding="@dimen/padding_small" />
    </LinearLayout>

    <!-- Domino (Wicklow) -->
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:padding="@dimen/padding_small"
         >

        <Button
            android:id="@+id/wicklow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="optionsClick"
            android:text="@string/wicklow" 
            android:textColor="@color/primary5"
            android:background="@drawable/button"
            android:textSize="@dimen/font_size"
            android:padding="@dimen/padding_small"/>
    </LinearLayout>
    
    <!-- ETH (Dublin) -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
          >
        
        <Button
            android:id="@+id/ethDublin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/eth_dublin"
            android:textColor="@color/primary5"
            android:onClick="optionsClick"
            android:background="@drawable/button"
            android:textSize="@dimen/font_size" 
            android:padding="@dimen/padding_small"/>
        
    </LinearLayout>
    
    <!-- ETH (Wicklow) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:padding="@dimen/padding_small"
       >
        
          

        <Button
          android:id="@+id/ethWicklow"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:onClick=" optionsClick" 
          android:text="@string/eth_wicklow"
          android:textColor="@color/primary5"
          android:background="@drawable/button"
          android:textSize="@dimen/font_size"
          android:padding="@dimen/padding_small"
              />
    </LinearLayout>
    
    <!-- Satellite -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
          >
        
        
        <Button
           android:id="@+id/satellite"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:onClick="optionsClick"
           android:background="@drawable/button"
           android:text="@string/satellite"
           android:textColor="@color/primary5"
           android:textSize="@dimen/font_size"
           android:padding="@dimen/padding_small"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/home"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:onClick="optionsClick" />

        <Button
            android:id="@+id/backCAlendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:onClick="optionsClick" />

    </LinearLayout>

</LinearLayout>
